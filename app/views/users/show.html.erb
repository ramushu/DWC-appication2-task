<div class="container">
  <div class="row">

    <%= render 'books/book', book: @book, user: @user %>

    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@bookx.user.id) do %>
                <%= image_tag @bookx.user.get_image, size: "100x100" %>
              <% end %>
            </td>
            <td>
              <%= link_to book_path(@bookx.id) do %>
                <%= @bookx.title %>
              <% end %>
            </td>
            <td>
              <%= @bookx.body %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>

  </div>
</div>